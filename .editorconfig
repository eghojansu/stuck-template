# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[tests/Fixtures/templates/**/*.php]
indent_size = 2
insert_final_newline = true

[phpunit.xml.dist]
indent_size = 2